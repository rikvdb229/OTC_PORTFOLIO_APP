{
  "name": "portfolio-tracker",
  "version": "0.1.0",
  "description": "Portfolio Tracker - Stock Options Management App",
  "main": "main.js",
  "author": "Portfolio Manager",
  "license": "MIT",
  "buildDate": "2025-07-09",
  "status": "Beta Version",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "setup-chrome": "node setup-chrome.js",
    "build": "node setup-chrome.js && electron-builder",
    "build-win": "node setup-chrome.js && electron-builder --win",
    "build-portable": "node setup-chrome.js && electron-builder --win portable",
    "build-installer": "node setup-chrome.js && electron-builder --win nsis",
    "build-all": "npm run build-portable && npm run build-installer",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-rebuild",
    "clean": "rimraf node_modules package-lock.json && npm install",
    "check-db": "node migrate-database.js",
    "migrate-db": "node migrate-database.js migrate",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "check": "npm run lint && npm run format"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.0",
    "@eslint/js": "^9.30.1",
    "electron": "^32.2.6",
    "electron-builder": "^25.1.8",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "csv-parser": "^3.2.0",
    "papaparse": "^5.5.3",
    "puppeteer": "^23.11.1",
    "sql.js": "^1.13.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "build": {
    "appId": "com.portfoliotracker.app",
    "productName": "Portfolio Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "node_modules/puppeteer/.local-chromium/**/*",
      "node_modules/puppeteer/.cache/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!build-prep.js",
      "!css-migration.js",
      "!simple-chrome-setup.js",
      "!test-chrome-simple.js",
      "!download-chrome.js",
      "!Todo.txt",
      "!Archive/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/puppeteer/.local-chromium",
        "to": "chromium",
        "filter": ["**/*"]
      },
      {
        "from": "node_modules/puppeteer/.cache",
        "to": "chromium-cache",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "perMachine": false,
      "runAfterFinish": false,
      "shortcutName": "Portfolio Tracker",
      "installerLanguages": ["en_US"],
      "language": "1033"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    }
  }
}