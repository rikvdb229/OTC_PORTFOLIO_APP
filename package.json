{
  "name": "portfolio-tracker",
  "version": "0.1.0",
  "description": "Portfolio Tracker - Stock Options Management App",
  "main": "main.js",
  "author": "Portfolio Manager",
  "license": "MIT",
  "buildDate": "2025-07-09",
  "status": "Beta Version",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev", 
    "build": "rimraf dist && electron-builder --win portable",
    "build:win": "rimraf dist && electron-builder --win portable",
    "build:mac": "rimraf dist && electron-builder --mac dmg", 
    "build:linux": "rimraf dist && electron-builder --linux AppImage",
    "build:all": "rimraf dist && electron-builder --win --mac --linux",
    "postinstall": "electron-builder install-app-deps"
  },
   "devDependencies": {
    "rimraf": "^5.0.1",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "csv-parser": "^3.2.0",
    "papaparse": "^5.5.3",
    "sql.js": "^1.13.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
"build": {
    "appId": "com.portfoliotracker.app",
    "productName": "Portfolio Tracker",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable",
      "sign": false
    },
    "mac": {
      "target": "dmg",
      "sign": false
    },
    "linux": {
      "target": "AppImage"
    },
    "files": [
      "main.js",
      "portfolio-db.js", 
      "scraper.js",
      "index.html",
      "renderer.js",
      "utils/**/*",
      "ui/**/*",
      "libs/**/*", 
      "styles/**/*",
      "assets/**/*",
      "package.json",
      "node_modules/sql.js/**/*",
      "node_modules/csv-parser/**/*",
      "node_modules/papaparse/**/*"
    ]
  }
}