{
  "name": "portfolio-tracker",
  "version": "0.1.0",
  "description": "Portfolio Tracker - Stock Options Management App",
  "main": "main.js",
  "author": "Portfolio Manager",
  "license": "MIT",
  "buildDate": "2025-07-09",
  "status": "Beta Version",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build-portable": "rimraf dist && npx electron-builder --win portable --config.win.target=portable",
    "build-installer": "rimraf dist && npx electron-builder --win nsis --config.win.target=nsis",
    "build-all": "npm run build-portable && npm run build-installer",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-rebuild",
    "clean": "rimraf node_modules package-lock.json && npm install",
    "clean-dist": "rimraf dist"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.0",
    "@eslint/js": "^9.30.1",
    "electron": "^32.2.6",
    "electron-builder": "^25.1.8",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "csv-parser": "^3.2.0",
    "papaparse": "^5.5.3",
    "puppeteer-core": "^24.12.1",
    "sql.js": "^1.13.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "build": {
    "appId": "com.portfoliotracker.app",
    "productName": "Portfolio Tracker",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "portfolio-db.js",
      "scraper.js",
      "index.html",
      "renderer.js",
      "utils/**/*",
      "assets/icon.png",
      "package.json",
      "node_modules/sql.js/**/*",
      "node_modules/csv-parser/**/*",
      "node_modules/papaparse/**/*",
      "node_modules/puppeteer-core/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!package-lock.json",
      "!*.backup.*",
      "!test-portable-*/",
      "!.cache/**/*",
      "!chrome-portable/**/*",
      "!build/**/*",
      "!dist/**/*"
    ],
    "compression": "normal",
    "includeSubNodeModules": false,
    "asar": true,
    "asarUnpack": [
      "node_modules/sql.js/dist/sql-wasm.wasm"
    ],
    "electronDownload": {
      "cache": ".cache/electron"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "portable": {
      "artifactName": "Portfolio Tracker Portable-${version}.exe",
      "unicode": true,
      "useZip": false
    },
    "nsis": {
      "artifactName": "Portfolio Tracker Setup-${version}.exe",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Portfolio Tracker",
      "installerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico"
    }
  }
}
