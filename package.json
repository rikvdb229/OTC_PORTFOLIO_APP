{
  "name": "portfolio-tracker",
  "version": "0.3.0",
  "description": "Portfolio Tracker - Stock Options Management App",
  "main": "main.js",
  "author": "Portfolio Manager",
  "license": "MIT",
  "buildDate": "2025-08-10",
  "status": "Beta Version",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "rimraf dist && electron-builder --win portable",
    "build:win": "rimraf dist && electron-builder --win portable",
    "build:mac": "rimraf dist && electron-builder --mac dmg",
    "build:linux": "rimraf dist && electron-builder --linux AppImage",
    "build:all": "rimraf dist && electron-builder --win --mac --linux",
    "postinstall": "electron-builder install-app-deps",
    "test:parse-table": "electron test-parse-options-table.js",
    "test:historical": "electron test-historical-scraper.js",
    "download:all-historical": "electron download-all-historical-data.js",
    "analyze:portfolio-historical": "electron download-portfolio-historical-data.js"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "electron": "^33.4.11",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "csv-parser": "^3.2.0",
    "papaparse": "^5.5.3",
    "sql.js": "^1.13.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "build": {
    "appId": "com.portfoliotracker.app",
    "productName": "Portfolio Tracker",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "icon": "assets/icons/png/512x512.png",
    "win": {
      "target": "portable",
      "icon": "assets/icons/win/icon.ico",
      "sign": false
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icons/win/icon.ico",
      "uninstallerIcon": "assets/icons/win/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Portfolio Tracker"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/mac/icon.icns",
      "sign": false
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/png/512x512.png"
    },
    "files": [
      "main.js",
      "portfolio-db.js",
      "scraper.js",
      "index.html",
      "renderer.js",
      "utils/**/*",
      "ui/**/*",
      "libs/**/*",
      "styles/**/*",
      "assets/**/*",
      "package.json",
      "node_modules/sql.js/**/*",
      "node_modules/csv-parser/**/*",
      "node_modules/papaparse/**/*"
    ]
  }
}
